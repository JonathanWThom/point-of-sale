<h1> <%= @product.name %> </h1>

<p> PRODUCT DESCRIPTION: <%= @product.description %> </p>

<p> PRICE: $<%= @product.price %> </p>

<form action="/products/<%= @product.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <input type="text" name="name" placeholder="Edit Name">
  </div>
  <div class="form-group">
    <input type="text" name="description" placeholder="Edit Description">
  </div>
  <div class="form-group">
    <input type="text" name="price" placeholder="Edit Price">
  </div>
  <button type="submit" class="btn btn-danger">Update</button>
</form>

<form action="/" method="post">
  <div class="form-group">
    <input type="hidden" name="_method" value="delete">
    <input type="hidden" name="product_id" value="<%= @product.id %>">
  </div>
  <button class="btn btn-danger" type="submit">Delete Product</button>
</form>
